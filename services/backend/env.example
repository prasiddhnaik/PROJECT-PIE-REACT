# Financial Analytics Hub Environment Configuration
# ================================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
DEBUG=True

# PKScreener Configuration
ENABLE_PKSCREENER=True
PKSCREENER_MOCK_MODE=True

# Database Configuration
DATABASE_URL=sqlite:///./financial_analytics.db

# Backend API URL for frontend components (required)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8001

# This URL is used by the frontend to connect to the backend API
# Development: http://localhost:8001
# Production: https://your-backend-domain.com
# Docker Compose: http://localhost:8001
# Used by CryptoChart component and other frontend components that need to communicate with the backend API

# OpenRouter AI Configuration (Get your free API key at https://openrouter.ai)
# ============================================================================
OPENROUTER_API_KEY=your_openrouter_api_key_here

# AI Feature Flags
ENABLE_AI_ANALYSIS=True
ENABLE_AI_TRADING_SIGNALS=True
ENABLE_AI_PORTFOLIO_OPTIMIZATION=True
ENABLE_AI_SENTIMENT_ANALYSIS=True
ENABLE_AI_RISK_ANALYSIS=True
ENABLE_AI_STREAMING=True
AI_MOCK_MODE=False

# Market Data API Keys (Optional - Free Tier Available)
# =====================================================
ALPHA_VANTAGE_API_KEY=3J52FQXN785RGJX0
FINNHUB_API_KEY=your_finnhub_key_here
TWELVE_DATA_API_KEY=your_twelve_data_key_here
POLYGON_API_KEY=your_polygon_key_here
QUANDL_API_KEY=your_quandl_key_here
FMP_API_KEY=your_fmp_key_here
IEX_API_KEY=your_iex_key_here
TIINGO_API_KEY=your_tiingo_key_here
INTRINIO_API_KEY=your_intrinio_key_here

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production-make-it-long-and-random
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/financial_analytics.log

# Mock Data Configuration
ENABLE_MOCK_DATA=True
MOCK_DELAY=0.1
MOCK_ERROR_RATE=0.0

# Rate Limiting (requests per minute)
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_AI=20
RATE_LIMIT_DATA=50
RATE_LIMIT_AUTH=10

